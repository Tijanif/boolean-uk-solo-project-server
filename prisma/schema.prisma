datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
 shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["referentialActions", "selectRelationCount"]
}



// User Model

model User {
  id Int @id @default(autoincrement())
  name String @unique
  email String
  password String
  avatar String?
  income Income[]
  household HouseHold[]
}

model Income {
  id Int @id @default(autoincrement())
  userId Int
  user User @relation(fields: [userId], references:[id], onDelete: Cascade, onUpdate: Cascade) 
  household HouseHold[]
}

model Expenses {
  id Int @id @default(autoincrement())
  userId Int
  name String
  amount Float
  household HouseHold[]
  
}

enum TypesofDivision {
  BASDONINCOME
  FYFTYFYFTY
  GRABABAG
}
model HouseHold {
  id Int @id @default(autoincrement())
  users User[] @relation(fields: [userId], references:[id], onDelete: Cascade, onUpdate: Cascade) 
  userId Int
  incomes Income[] @relation(fields: [incomeId], references:[id], onDelete: Cascade, onUpdate: Cascade) 
  incomeId Int
  expenses Expenses[] @relation(fields: [expensesId], references:[id], onDelete: Cascade, onUpdate: Cascade) 
  expensesId Int
  divisionType TypesofDivision 

}
